<head>
  <title>WebCampBackendNow</title>
</head>

<body>
  <h1>Editing Book</h1>
  <%= form_with model: @book do |f| %>
    <div class=field>
      <label>Title</label>
      <br>
      <%= f.text_field :title %>
    </div>

    <div class=field>
      <label>Body</label>
      <br>
      <%= f.text_area :body %>
    </div>

    <div class=actions>
      <%= f.submit 'Update Book' %>
    </div>
    <%= link_to "Show", book_path(@book.id), method: :get %>
    |
    <%= link_to "Back", "/books" %>

  <% end %>
</body>