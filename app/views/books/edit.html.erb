<body>
  <h1>Editing Book</h1>
  <% if @book.errors.count == 1 %>
  <div id = "error_explanation">
    <h2>1 error prohibited this book from being saved:</h2>
    <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
  <% end %>
  <% if @book.errors.count == 2 %>
  <div id = "error_explanation">
    <h2>2 errors prohibited this book from being saved:</h2>
    <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
  <% end %>
  <%= form_with model: @book do |f| %>
    <div class=field>
      <label>Title</label>
      <br>
      <%= f.text_field :title %>
    </div>

    <div class=field>
      <label>Body</label>
      <br>
      <%= f.text_area :body %>
    </div>

    <div class=actions>
      <%= f.submit 'Update Book' %>
    </div>
    <%= link_to "Show", book_path(@book.id), method: :get %>
    |
    <%= link_to "Back", "/books" %>

  <% end %>
</body>