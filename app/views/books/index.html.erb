<body>
  <h1>Books</h1>

  <h2>New book</h2>
  <%= form_with model: @book, url: '/books', method: :post do |f| %>
    <div>
      <label>Title</label>
      <%= f.text_field :title %>
    </div>

    <div>
      <label>Body</label>
      <%= f.text_area :body %>
    </div>

    <div>
      <%= f.submit 'Create Book' %>
    </div>
  <% end %>
</body>


